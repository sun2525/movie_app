<%= render "shared/header" %>
<h1>プロフィールを編集</h1>

<%= render "shared/error_messages", model: @user %>

<%= form_with model: @user, local: true, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :avatar, "プロフィール画像" %>
    <% if @user.avatar.attached? %>
      <div class="mb-2">
        <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "img-thumbnail" %>
      </div>
    <% end %>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <%= f.submit "更新する", class: "btn btn-primary" %>
  <%= link_to "キャンセル", user_path(@user), class: "btn btn-secondary ms-2" %>
<% end %>
