<%= render "shared/header" %>

<div class="container mt-4">
  <!-- プロフィール全体を中央揃え -->
  <div class="text-center">
    <h1><%= @user.name %> さんのプロフィール</h1>

    <!-- プロフィール画像 -->
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "img-thumbnail mt-3" %>
    <% else %>
      <%= image_tag "default_avatar.png", class: "default-avatar", alt: "デフォルトアバター" %>
    <% end %>

    <p class="mt-3"><strong>メールアドレス:</strong> <%= @user.email %></p>

    <% if current_user == @user %>
      <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-warning mt-3" %>
    <% end %>
  </div>

  <!-- 投稿した映画の一覧 -->
  <div class="mt-5">
    <h2 class="text-center">お気に入りの映画</h2>
    
  </div>

  <!-- トップページへのリンク -->
  <div class="text-center mt-4">
    <%= link_to "トップページへ戻る", movies_path, class: "btn btn-secondary" %>
  </div>
</div>
