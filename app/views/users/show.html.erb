<%= render "shared/header" %>

<div class="container mt-4">
  <!-- プロフィール全体を中央揃え -->
  <div class="text-center">
    <h1><%= @user.name %> さんのプロフィール</h1>

    <!-- プロフィール画像 -->
    <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar.variant(resize_to_limit: [150, 150]), class: "img-thumbnail mt-3" %>
    <% else %>
      <%= image_tag "default_avatar.png", class: "default-avatar", alt: "デフォルトアバター" %>
    <% end %>

    <p class="mt-3"><strong>メールアドレス:</strong> <%= @user.email %></p>

    <% if current_user == @user %>
      <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-warning mt-3" %>
    <% end %>
  </div>

  <!-- 投稿した映画の一覧 -->
  <div class="mt-5">
    <h2 class="text-center">投稿した映画</h2>
    <% if @movies.any? %>
      <div class="row justify-content-center">
        <% @movies.each do |movie| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <% if movie.image.attached? %>
                <%= image_tag movie.image.variant(resize_to_fill: [300, 200]), class: "card-img-top" %>
              <% else %>
                <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No Image">
              <% end %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= link_to movie.title, movie_path(movie), class: "text-decoration-none text-dark" %></h5>
                <p class="card-text flex-grow-1"><%= movie.description.truncate(50) %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center mt-4">まだ映画を投稿していません。</p>
    <% end %>
  </div>

  <!-- トップページへのリンク -->
  <div class="text-center mt-4">
    <%= link_to "トップページへ戻る", movies_path, class: "btn btn-secondary" %>
  </div>
</div>
