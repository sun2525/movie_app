<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <%= link_to "Movie Watch Together", root_path, class: "navbar-brand" %>

    <!-- ナビゲーションのトグル（モバイル対応） -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto">
        <!-- 検索フォーム -->
        <li class="nav-item">
          <%= form_with url: movies_path, method: :get, local: true, class: "d-flex" do |f| %>
            <%= f.text_field :search, class: "form-control me-2", placeholder: "映画を検索" %>
            <%= f.submit "検索", class: "btn btn-outline-primary" %>
          <% end %>
        </li>
      </ul>

      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item d-flex align-items-center">
            <!-- アバター画像 -->
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar.variant(resize_to_limit: [40, 40]), class: "rounded-circle me-2", alt: "アバター画像" %>
            <% else %>
              <%= image_tag "default_avatar.png",  class: "avatar-icon", alt: "デフォルトアバター" %>
            <% end %>
            
            <!-- ユーザー名 -->
            <%= link_to current_user.name, user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item d-flex align-items-center">
            <%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-danger" %>
          </li>
        <% else %>
          <li class="nav-item d-flex align-items-center">
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-primary me-2" %>
          </li>
          <li class="nav-item d-flex align-items-center">
            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
