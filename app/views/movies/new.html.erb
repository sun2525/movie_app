<h1>映画を投稿</h1>

<!-- 映画投稿フォーム -->
<%= form_with model: @movie, local: true do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "説明" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :streaming_url, "視聴リンク" %>
    <%= f.text_field :streaming_url %>
  </div>

  <div>
    <%= f.label :image, "映画の画像" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "投稿", class: "btn btn-success" %>
  </div>
<% end %>
