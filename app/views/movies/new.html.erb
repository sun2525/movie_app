<%= render "shared/header" %>
<h1>映画を投稿</h1>

<%= form_with model: @movie, local: true do |f| %>
<!-- エラーメッセージを表示 -->
<%= render "shared/error_messages", model: @movie %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "説明" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :streaming_url, "視聴リンク" %>
    <%= f.text_field :streaming_url %>
  </div>

  <div>
    <%= f.label :image, "映画の画像" %>
    <% if @movie.image.attached? %>
      <div class="mb-2">
        <%= image_tag @movie.image.variant(resize_to_limit: [300, 200]), class: "img-thumbnail" %>
      </div>
    <% end %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "投稿", class:"btn btn-success" %>
  </div>
<% end %>
