<%= render "shared/header" %>

<!-- 🔽 トップページの画像を追加 -->
<div class="top-image-container text-center">
  <%= image_tag "sync_watch.png", alt: "トップページ画像", class: "top-image" %>
</div>

<div class="container mt-4">
  <h2 class="section-title">All Movies</h2>

  <!-- 🔍 検索結果セクション -->
  <% if @search_results.present? %>
    <h2 class="movie-section-title"> Search Hits </h2>
    <%= render "shared/movie_carousel", movies: @search_results, carousel_id: "searchCarousel" %>
  <% end %>

  <!-- 🎬 最新の映画 -->
  <h2 class="movie-section-title"> New Releases </h2>
  <%= render "shared/movie_carousel", movies: @latest_movies, carousel_id: "latestMoviesCarousel" %>

  <!-- ⭐ おすすめの映画 -->
  <h2 class="movie-section-title"> Must-Watch Picks </h2>
  <%= render "shared/movie_carousel", movies: @recommended_movies, carousel_id: "recommendedMoviesCarousel" %>
</div>
